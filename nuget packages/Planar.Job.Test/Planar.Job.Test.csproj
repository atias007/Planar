<Project Sdk="Microsoft.NET.Sdk">

	<PropertyGroup>
		<TargetFramework>net5.0</TargetFramework>
		<Version>1.1.4</Version>
		<Description>Library for writing DotNet unit tests for Planar jobs</Description>
		<RepositoryType>git</RepositoryType>
		<PackageLicenseExpression>MIT</PackageLicenseExpression>
		<PackageRequireLicenseAcceptance>True</PackageRequireLicenseAcceptance>
		<GeneratePackageOnBuild>True</GeneratePackageOnBuild>
		<Title>Library for writing DotNet unit tests for Planar jobs</Title>
		<PackageProjectUrl>https://github.com/atias007/Planar</PackageProjectUrl>
		<PackageIcon>nuget_logo.png</PackageIcon>
		<RepositoryUrl>https://github.com/atias007/Planar</RepositoryUrl>
		<PackageTags>planar;job;schedule;task;automation</PackageTags>
	</PropertyGroup>
	<PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Debug|AnyCPU'">
		<NoWarn>1701;1702;NU1803</NoWarn>
	</PropertyGroup>

	<PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Release|AnyCPU'">
		<NoWarn>1701;1702;NU1803</NoWarn>
	</PropertyGroup>

	<ItemGroup>
	  <Compile Remove="Jobs\**" />
	  <EmbeddedResource Remove="Jobs\**" />
	  <None Remove="Jobs\**" />
	</ItemGroup>
	<ItemGroup>
		<Compile Include="..\..\src\Jobs\CommonJob\JobExecutionContext\JobDetail.cs" Link="Common\JobExecutionContext\JobDetail.cs" />
		<Compile Include="..\..\src\Jobs\CommonJob\JobExecutionContext\JobExecutionContext.cs" Link="Common\JobExecutionContext\JobExecutionContext.cs" />
		<Compile Include="..\..\src\Jobs\CommonJob\JobExecutionContext\Key.cs" Link="Common\JobExecutionContext\Key.cs" />
		<Compile Include="..\..\src\Jobs\CommonJob\JobExecutionContext\TriggerDetail.cs" Link="Common\JobExecutionContext\TriggerDetail.cs" />
		<Compile Include="..\..\src\Jobs\CommonJob\JobExecutionMetadata.cs" Link="Common\JobExecutionMetadata.cs" />
		<Compile Include="..\..\src\Jobs\CommonJob\JobMessageBroker.cs" Link="Common\JobMessageBroker.cs" />
		<Compile Include="..\..\src\Jobs\CommonJob\MessageBrokerEntities\KeyValueItem.cs" Link="Common\KeyValueItem.cs" />
		<Compile Include="..\..\src\Planar.API.Common\Entities\StatusMembers.cs" Link="Common\StatusMembers.cs" />
		<Compile Include="..\..\src\Planar.Common\Consts.cs" Link="Consts.cs" />
		<Compile Include="..\..\src\Planar.Common\Extensions.cs" Link="Common\Extensions.cs" />
		<Compile Include="..\..\src\Planar.Common\Global.cs" Link="Common\Global.cs" />
		<Compile Include="..\..\src\Planar.Common\JobSettingsLoader.cs" Link="Common\JobSettingsLoader.cs" />
		<Compile Include="..\Planar.Job\ExceptionDto.cs" Link="Common\ExceptionDto.cs" />
		<Compile Include="..\Planar.Job\Logger\LogEntity.cs" Link="Common\LogEntity.cs" />
		<Compile Include="..\..\src\Planar\FolderConsts.cs" Link="FolderConsts.cs" />
	</ItemGroup>
	<ItemGroup>
	  <None Include="..\..\res\nuget_logo.png">
	    <Pack>True</Pack>
	    <PackagePath>\</PackagePath>
	  </None>
	</ItemGroup>

	<ItemGroup>
		<PackageReference Include="Microsoft.Extensions.Configuration.Abstractions" Version="6.0.0" />
		<PackageReference Include="Microsoft.Extensions.DependencyInjection.Abstractions" Version="6.0.0" />
		<PackageReference Include="Newtonsoft.Json" Version="13.0.1" />
		<PackageReference Include="Quartz" Version="3.5.0" />
		<PackageReference Include="YamlDotNet" Version="12.0.2" />
	</ItemGroup>

</Project>
