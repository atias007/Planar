<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFramework>net8.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
  </PropertyGroup>

  <ItemGroup>
    <Compile Include="..\BaseCheckJob.cs" Link="Common\BaseCheckJob.cs" />
    <Compile Include="..\BaseDefault.cs" Link="Common\BaseDefault.cs" />
    <Compile Include="..\CheckException.cs" Link="Common\CheckException.cs" />
    <Compile Include="..\CheckFailCounter.cs" Link="Common\CheckFailCounter.cs" />
    <Compile Include="..\CheckSpanTracker.cs" Link="Common\CheckSpanTracker.cs" />
    <Compile Include="..\CommonUtil.cs" Link="Common\CommonUtil.cs" />
    <Compile Include="..\ICheckElemnt.cs" Link="Common\ICheckElemnt.cs" />
    <Compile Include="..\ServicesCollectionExtentions.cs" Link="Common\ServicesCollectionExtentions.cs" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.Extensions.Configuration.Binder" Version="8.0.1" />
    <PackageReference Include="Planar.Job" Version="1.7.1.2" />
    <PackageReference Include="Polly" Version="8.3.1" />
  </ItemGroup>

  <ItemGroup>
    <None Update="JobFile.yml">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </None>
    <None Update="JobSettings.Development.yml">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </None>
    <None Update="JobSettings.Production.yml">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </None>
    <None Update="JobSettings.Stage.yml">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </None>
    <None Update="JobSettings.Test.yml">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </None>
    <None Update="JobSettings.yml">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </None>
  </ItemGroup>

  <ItemGroup>
    <Folder Include="Common\" />
  </ItemGroup>

</Project>
