<Project Sdk="Microsoft.NET.Sdk">

	<PropertyGroup>
		<OutputType>Exe</OutputType>
		<TargetFramework>net6.0</TargetFramework>
		<AssemblyName>planar-cli</AssemblyName>
		<Version>1.2.0</Version>
		<StartupObject>Planar.CLI.Program</StartupObject>
		<Nullable>enable</Nullable>
	</PropertyGroup>
	<PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Debug|AnyCPU'">
		<NoWarn>1701;1702;NU1803</NoWarn>
	</PropertyGroup>

	<PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Release|AnyCPU'">
		<NoWarn>1701;1702;NU1803</NoWarn>
	</PropertyGroup>
	<PropertyGroup>
		<SatelliteResourceLanguages>en</SatelliteResourceLanguages>
	</PropertyGroup>
	<ItemGroup>
		<None Remove="Help\Cluster.txt" />
		<None Remove="Help\Config.txt" />
		<None Remove="Help\group.txt" />
		<None Remove="Help\History.txt" />
		<None Remove="Help\Job.txt" />
		<None Remove="Help\Modules.txt" />
		<None Remove="Help\Monitor.txt" />
		<None Remove="Help\Service.txt" />
		<None Remove="Help\Trace.txt" />
		<None Remove="Help\Trigger.txt" />
		<None Remove="Help\User.txt" />
	</ItemGroup>

	<ItemGroup>
		<Compile Include="..\Planar.Common\Consts.cs" Link="Consts.cs" />
		<Compile Include="..\Planar.Common\YmlUtil.cs" Link="General\YmlUtil.cs" />
		<Compile Include="..\Planar.Service\Monitor\MonitorEventsExtensions.cs" Link="MonitorEventsExtensions.cs" />
	</ItemGroup>

	<ItemGroup>
		<EmbeddedResource Include="Help\History.txt" />
		<EmbeddedResource Include="Help\Monitor.txt" />
		<EmbeddedResource Include="Help\Group.txt" />
		<EmbeddedResource Include="Help\Cluster.txt" />
		<EmbeddedResource Include="Help\User.txt" />
		<EmbeddedResource Include="Help\Trigger.txt" />
		<EmbeddedResource Include="Help\Config.txt" />
		<EmbeddedResource Include="Help\Trace.txt" />
		<EmbeddedResource Include="Help\Job.txt" />
		<EmbeddedResource Include="Help\Modules.txt" />
	</ItemGroup>

	<ItemGroup>
		<PackageReference Include="Microsoft.AspNetCore.DataProtection" Version="7.0.3" />
		<PackageReference Include="Microsoft.Extensions.DependencyInjection" Version="6.0.1" />
		<PackageReference Include="Newtonsoft.Json" Version="13.0.3" />
		<PackageReference Include="RestSharp" Version="109.0.1" />
		<PackageReference Include="Spectre.Console" Version="0.46.0" />
	</ItemGroup>

	<ItemGroup>
		<ProjectReference Include="..\Planar.API.Common\Planar.API.Common.csproj" />
	</ItemGroup>

	<ItemGroup>
		<None Update="planar-cli">
			<CopyToOutputDirectory>Always</CopyToOutputDirectory>
		</None>
	</ItemGroup>
</Project>